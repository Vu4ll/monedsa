<!DOCTYPE html>
<html lang="<%= currentLocale %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t("privacyPolicy.privacy") %> - <%= app.name %>
    </title>
    <meta name="description" content="Monedsa app privacy policy and personal data protection information">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="icon" href="/images/icon-trans.png" type="image/x-icon">
</head>

<body>
    <%- include("partials/header", { originalUrl: "/privacy-policy" }) %>

        <!-- Privacy Policy Content -->
        <main class="privacy-page">
            <div class="container">
                <div class="privacy-content">
                    <div class="privacy-header">
                        <h1><%= t("privacyPolicy.privacy") %></h1>
                        <p class="last-updated"><%= t("privacyPolicy.lastUpdated") %></p>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.general.title") %></h2>
                        <p><%= t("privacyPolicy.sections.general.text") %></p>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.collectedData.title") %></h2>
                        <p><%= t("privacyPolicy.sections.collectedData.text") %></p>
                        <ul>
                            <li><%- t("privacyPolicy.sections.collectedData.items.financial") %></li>
                            <li><%- t("privacyPolicy.sections.collectedData.items.account") %></li>
                            <li><%- t("privacyPolicy.sections.collectedData.items.category") %></li>
                            <li><%- t("privacyPolicy.sections.collectedData.items.thema") %></li>
                            <li><%- t("privacyPolicy.sections.collectedData.items.device") %></li>
                            <li><%- t("privacyPolicy.sections.collectedData.items.network") %></li>
                        </ul>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.storage.title") %></h2>
                        <p><%= t("privacyPolicy.sections.storage.text") %></p>
                        <ul>
                            <li><%- t("privacyPolicy.sections.storage.items.cloud") %></li>
                            <li><%- t("privacyPolicy.sections.storage.items.local") %></li>
                            <li><%- t("privacyPolicy.sections.storage.items.crossDevice") %></li>
                            <li><%- t("privacyPolicy.sections.storage.items.jwt") %></li>
                            <li><%- t("privacyPolicy.sections.storage.items.backup") %></li>
                        </ul>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.security.title") %></h2>
                        <p><%= t("privacyPolicy.sections.security.text") %></p>
                        <ul>
                            <li><%- t("privacyPolicy.sections.security.items.localEncryption") %></li>
                            <li><%- t("privacyPolicy.sections.security.items.serverEncryption") %></li>
                            <li><%- t("privacyPolicy.sections.security.items.jwtSecurity") %></li>
                            <li><%- t("privacyPolicy.sections.security.items.https") %></li>
                            <li><%- t("privacyPolicy.sections.security.items.sharing") %></li>
                        </ul>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.thirdParty.title") %></h2>
                        <p><%= t("privacyPolicy.sections.thirdParty.text") %></p>
                        <ul>
                            <li><%- t("privacyPolicy.sections.thirdParty.items.reactNative") %></li>
                            <li><%- t("privacyPolicy.sections.thirdParty.items.asyncStorage") %></li>
                            <li><%- t("privacyPolicy.sections.thirdParty.items.netInfo") %></li>
                            <li><%- t("privacyPolicy.sections.thirdParty.items.axios") %></li>
                            <li><%- t("privacyPolicy.sections.thirdParty.items.mongodb") %></li>
                            <li><%- t("privacyPolicy.sections.thirdParty.items.nodemailer") %></li>
                            <li><%- t("privacyPolicy.sections.thirdParty.items.googlePlay") %></li>
                        </ul>
                        <p><%- t("privacyPolicy.sections.thirdParty.note") %></p>
                    </div>

                    <div class="privacy-section" id="delete-account">
                        <h2><%= t("privacyPolicy.sections.deletion.title") %></h2>
                        <p><%= t("privacyPolicy.sections.deletion.text") %></p>
                        <ul>
                            <li><%- t("privacyPolicy.sections.deletion.items.removeApp") %></li>
                            <li><%- t("privacyPolicy.sections.deletion.items.deleteAccount") %></li>
                            <li><%- t("privacyPolicy.sections.deletion.items.serverDelete") %></li>
                            <li><%- t("privacyPolicy.sections.deletion.items.selectiveDelete") %></li>
                        </ul>
                        <p><%- t("privacyPolicy.sections.deletion.note") %></p>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.support.title") %></h2>
                        <p><%= t("privacyPolicy.sections.support.text") %></p>
                        <ul>
                            <li><%- t("privacyPolicy.sections.support.items.collected") %></li>
                            <li><%- t("privacyPolicy.sections.support.items.email") %></li>
                            <li><%- t("privacyPolicy.sections.support.items.sharing") %></li>
                        </ul>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.changes.title") %></h2>
                        <p><%= t("privacyPolicy.sections.changes.text") %></p>
                        <p><%= t("privacyPolicy.sections.changes.note") %></p>
                    </div>

                    <div class="privacy-section" id="contact">
                        <h2><%= t("privacyPolicy.sections.contact.title") %></h2>
                        <p><%= t("privacyPolicy.sections.contact.text") %></p>
                        <ul>
                            <li>
                                <strong>GitHub Issues:</strong> 
                                <a href="<%= app.githubUrl %>/issues" target="_blank">
                                    <%= app.githubUrl %>/issues
                                </a>
                            </li>
                            <li><%- t("privacyPolicy.sections.contact.items.email") %></li>
                            <li><%- t("privacyPolicy.sections.contact.items.inApp") %></li>
                        </ul>
                        <p><%- t("privacyPolicy.sections.contact.note") %></p>
                    </div>

                    <div class="privacy-section">
                        <h2><%= t("privacyPolicy.sections.opensource.title") %></h2>
                        <p><%= t("privacyPolicy.sections.opensource.text") %></p>
                        <ul>
                            <li>
                                <%- t("privacyPolicy.sections.opensource.items.repo") %>
                                <a href="<%= app.githubUrl %>" target="_blank">
                                    <%= app.githubUrl %>
                                </a>
                            </li>
                            <li><%- t("privacyPolicy.sections.opensource.items.license") %></li>
                            <li><%- t("privacyPolicy.sections.opensource.items.rights") %></li>
                            <li><%- t("privacyPolicy.sections.opensource.items.thirdParty") %></li>
                        </ul>
                        <p><%- t("privacyPolicy.sections.opensource.note") %></p>
                    </div>

                    <div class="privacy-footer">
                        <p><%= t("privacyPolicy.sections.footer.compliance") %></p>
                        <p><%- t("privacyPolicy.sections.footer.version").replace("{version}", app.version) %></p>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> <%= t("privacyPolicy.sections.footer.backToHome") %>
                        </a>
                    </div>
                </div>
            </div>
        </main>

        <%- include("partials/footer") %>
        <script src="/js/script.js"></script>
</body>

</html>