<!DOCTYPE html>
<html lang="<%= currentLocale %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= app.name %> - <%= app.tagline %>
    </title>
    <meta name="description" content="<%= app.description %>">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="icon" href="/images/icon-trans.png" type="image/x-icon">
</head>

<body>
    <%- include("partials/header", { originalUrl: "/" }) %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    <h1>
                        <%= app.name %>
                    </h1>
                    <p class="hero-tagline">
                        <%= app.tagline %>
                    </p>
                    <p class="hero-description">
                        <%= app.description %>
                    </p>
                    <div class="hero-buttons">
                        <a href="#download" class="btn btn-primary">
                            <i class="fas fa-download"></i> <%= t("hero.download") %>
                        </a>
                        <a href="<%= app.githubUrl %>" target="_blank" class="btn btn-secondary">
                            <i class="fab fa-github"></i> <%= t("hero.source") %>
                        </a>
                    </div>
                </div>
                <div class="hero-image">
                    <div class="phone-mockup">
                        <div class="phone-frame">
                            <div class="phone-screen">
                                <div class="app-preview">
                                    <div class="app-header">
                                        <h3>Monedsa</h3>
                                        <span class="balance"><%= t("hero.mockData.currency") %><%= t("hero.mockData.balance") %></span>
                                    </div>
                                    <div class="quick-stats">
                                        <div class="stat-item income">
                                            <span class="label"><%= t("hero.income") %></span>
                                            <span class="amount">+<%= t("hero.mockData.currency") %><%= t("hero.mockData.totalIncome") %></span>
                                        </div>
                                        <div class="stat-item expense">
                                            <span class="label"><%= t("hero.expense") %></span>
                                            <span class="amount">-<%= t("hero.mockData.currency") %><%= t("hero.mockData.totalExpense") %></span>
                                        </div>
                                    </div>
                                    <div class="recent-transactions">
                                        <div class="transaction">
                                            <span class="desc"><%= t("hero.salary") %></span>
                                            <span class="amount positive">+<%= t("hero.mockData.currency") %><%= t("hero.mockData.transactions.salary") %></span>
                                        </div>
                                        <div class="transaction">
                                            <span class="desc"><%= t("hero.market") %></span>
                                            <span class="amount negative">-<%= t("hero.mockData.currency") %><%= t("hero.mockData.transactions.market") %></span>
                                        </div>
                                        <div class="transaction">
                                            <span class="desc"><%= t("hero.rent") %></span>
                                            <span class="amount negative">-<%= t("hero.mockData.currency") %><%= t("hero.mockData.transactions.rent") %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features">
        <div class="container">
            <h2><%= t("featuresSection.title") %></h2>
            <div class="features-grid">
                <% app.features.forEach(feature=> { %>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <%= feature.icon %>
                        </div>
                        <h3>
                            <%= feature.title %>
                        </h3>
                        <p>
                            <%= feature.description %>
                        </p>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Screenshots Section -->
    <section id="screenshots" class="screenshots">
        <div class="container">
            <h2><%= t("screenshotsSection") %></h2>
            <div class="screenshots-grid">
                <% app.screenshots.forEach((screenshot, index)=> { %>
                    <div class="screenshot-item">
                        <img src="<%= app.screenshots[index] %>" alt="Screenshot <%= index + 1 %>">
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Download Section -->
    <section id="download" class="download">
        <div class="container">
            <h2><%= t("downloadSection.downloadApp") %></h2>
            <p><%= t("downloadSection.description") %></p>
            <div class="download-buttons">
                <a href="<%= app.downloadLinks.playStore %>" class="download-btn play-store" target="_blank">
                    <i class="fab fa-google-play"></i>
                    <div>
                        <% if (currentLocale === "en" || currentLocale === "nl") { %>
                            <span><%= t("downloadSection.download") %></span>
                            <strong><%= t("downloadSection.googlePlay") %></strong>
                        <% } else { %>
                            <span><%= t("downloadSection.googlePlay") %></span>
                            <strong><%= t("downloadSection.download") %></strong>
                        <% } %>
                    </div>
                </a>
                <a href="<%= app.downloadLinks.apk %>" class="download-btn apk-download">
                    <i class="fas fa-download"></i>
                    <div>
                        <% if (currentLocale === "en" || currentLocale === "nl" ) { %>
                            <span><%= t("downloadSection.download").split(" ")[0] %></span>
                            <strong><%= t("downloadSection.directApk") %></strong>
                        <% } else { %>
                            <span><%= t("downloadSection.directApk") %></span>
                            <strong><%= t("downloadSection.download") %></strong>
                        <% } %>
                    </div>
                </a>
            </div>
            <p class="version-info">
                <%= t("downloadSection.version") %>: <%= app.version %>
            </p>
        </div>
    </section>

    <%- include("partials/footer") %>

    <script src="/js/script.js"></script>
</body>

</html>