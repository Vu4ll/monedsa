<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <h3>
                    <%= app.name %>
                </h3>
                <p><%= t("footer.description") %></p>
            </div>
            <div class="footer-section">
                <h4><%= t("footer.legal") %></h4>
                <ul>
                    <li><a href="/privacy-policy"><%= t("footer.privacy") %></a></li>
                    <li><a href="<%= app.githubUrl %>/blob/main/LICENSE" target="_blank"><%= t("footer.openSource") %></a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4><%= t("footer.links") %></h4>
                <ul>
                    <li><a href="<%= app.githubUrl %>" target="_blank">GitHub</a></li>
                    <li><a href="<%= app.githubUrl %>/issues" target="_blank"><%= t("footer.reportIssue") %></a></li>
                    <li><a href="<%= app.githubUrl %>/releases" target="_blank"><%= t("footer.versions") %></a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4><%= t("footer.developer") %></h4>
                <p>
                    <a href="https://github.com/Vu4ll" target="_blank">
                        <i class="fab fa-github"></i> GitHub
                    </a>
                </p>
                <p>
                    <a href="https://vu4ll.com.tr/" target="_blank">
                        <i class="fas fa-globe"></i> <%= t("footer.web") %>
                    </a>
                </p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>
                &copy; <%= new Date().getFullYear() %> <%= app.name %>
            </p>
        </div>
    </div>
</footer>